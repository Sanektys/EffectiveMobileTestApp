<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Theme.EffectiveMobileTestApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey_5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_3</item>
        <item name="colorSecondaryVariant">@color/grey_7</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOutline">@color/grey_5</item>
        <item name="colorOutlineVariant">@color/grey_5</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="switchStyle">@style/Switch</item>
        <item name="bottomSheetDragHandleStyle">@style/DragHandleBottomSheet</item>
        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <!-- Text styles -->
    <style name="Title1">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Title2">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Title3">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Title4">
        <item name="android:fontFamily">@font/sf_pro_display_regular_italic</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text1">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text2">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="ButtonText1">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TabText1">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/text_extra_small</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonBlack" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/button_state_colors_gray</item>
        <item name="android:textColor">@color/text_state_colors_for_gray_button</item>
        <item name="android:textAppearance">@style/ButtonText1</item>
        <item name="cornerRadius">@dimen/style.common_button.corner_radius</item>
    </style>

    <style name="ButtonBlack.Rounded" parent="ButtonBlueInToggleGroup">
        <item name="backgroundTint">@color/grey_3</item>
    </style>

    <style name="ButtonBlue" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/button_state_colors_blue</item>
        <item name="android:textColor">@color/text_state_colors_for_blue_button</item>
        <item name="android:textAppearance">@style/ButtonText1</item>
        <item name="cornerRadius">@dimen/style.common_button.corner_radius</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="ButtonOrange" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/button_state_colors_orange</item>
        <item name="android:textColor">@color/text_state_colors_for_blue_button</item>
        <item name="android:textAppearance">@style/ButtonText1</item>
        <item name="cornerRadius">@dimen/style.rounded_button.corner_radius</item>
    </style>

    <style name="ButtonBlueInToggleGroup" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Title4</item>
        <item name="android:paddingStart">@dimen/style.rounded_button_with_icon.padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/style.rounded_button_with_icon.padding_horizontal</item>
        <item name="iconPadding">@dimen/style.rounded_button_with_icon.icon_padding</item>
        <item name="cornerRadius">@dimen/style.rounded_button_with_icon.corner_radius</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipIconVisible">true</item>
        <item name="chipBackgroundColor">@color/grey_3</item>
        <item name="android:textAppearance">@style/Title4</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStartPadding">@dimen/style.rounded_button_with_icon.padding_horizontal</item>
        <item name="chipEndPadding">@dimen/style.rounded_button_with_icon.padding_horizontal</item>
        <item name="iconEndPadding">@dimen/style.rounded_button_with_icon.icon_padding</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="chipCornerRadius">@dimen/style.rounded_button_with_icon.corner_radius</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <!-- Switch styles -->
    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_state_colors_blue</item>
        <item name="trackTint">@color/switch_track_state_colors_blue</item>
    </style>

    <!-- Bottom sheet modal style -->
    <style name="BottomSheetModal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerLarge</item>
        <item name="backgroundTint">@color/grey_2</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">false</item>"
        <item name="behavior_halfExpandedRatio">@dimen/search_screen.half_expanded_ratio</item>
        <item name="behavior_expandedOffset">@dimen/search_screen.margin_top</item>
        <item name="shouldRemoveExpandedCorners">false</item>
        <item name="behavior_saveFlags">all</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="DragHandleBottomSheet" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/grey_5</item>
    </style>
</resources>