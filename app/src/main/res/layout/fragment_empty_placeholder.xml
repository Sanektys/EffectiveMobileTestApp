<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.empty_placeholder.EmptyPlaceholderFragment">

    <ImageView
        android:id="@+id/empty_page_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/empty_fragment.image.height"
        android:src="@drawable/empty_page"
        app:tint="@color/grey_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/empty_fragment.image.vertical_bias"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_fragment.message.text"
        android:textColor="@color/grey_5"
        android:textAppearance="@style/Title2"
        app:layout_constraintTop_toBottomOf="@id/empty_page_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_fragment.back_button"
        style="@style/ButtonBlack"
        app:layout_constraintVertical_bias="@dimen/empty_fragment.back_button.vertical_bias"
        app:layout_constraintStart_toStartOf="@id/empty_page_image"
        app:layout_constraintEnd_toEndOf="@id/empty_page_image"
        app:layout_constraintTop_toBottomOf="@id/empty_page_image"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>